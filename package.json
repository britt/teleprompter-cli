{
  "name": "teleprompter-cli",
  "version": "1.0.1",
  "description": "Interactive CLI for managing LLM prompts with Cloudflare Workers",
  "type": "module",
  "bin": {
    "tp": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "bun test",
    "prepublishOnly": "npm run build",
    "demo": "bun run test-ui.ts"
  },
  "keywords": [
    "cli",
    "teleprompter",
    "prompts",
    "llm",
    "cloudflare",
    "terminal",
    "ink"
  ],
  "author": "Britt Crawford <britt.v.crawford@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/britt/teleprompter-cli.git"
  },
  "bugs": {
    "url": "https://github.com/britt/teleprompter-cli/issues"
  },
  "homepage": "https://github.com/britt/teleprompter-cli#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "ink-testing-library": "^4.0.0",
    "typescript": "^5"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "commander": "^14.0.2",
