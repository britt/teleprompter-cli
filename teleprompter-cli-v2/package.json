{
	"name": "teleprompter-cli",
	"version": "2.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"author": "Britt Crawford <britt.v.crawford@gmail.com>",
	"description": "A CLI for the Teleprompter service",
	"repository": {
		"type": "git",
		"url": "https://github.com/britt/teleprompter-cli.git"
	},
	"type": "module",
	"engines": {
		"bun": ">=1.0.0"
	},
	"scripts": {
		"build": "bun run tsc",
		"dev": "bun run tsc --watch",
		"test": "bun test",
		"lint": "bun run xo",
		"format": "bun run prettier --check .",
		"format:fix": "bun run prettier --write .",
		"start": "bun run tsc && node dist/cli.js"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"axios": "^1.10.0",
		"commander": "^14.0.0",
		"ink": "^4.1.0",
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"xo": "^0.53.1"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
